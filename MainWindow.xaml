<Window x:Class="PureGIS_Geo_QC.WPF.MainWindow"        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PureGIS_Geo_QC.WPF"
        KeyDown="MainWindow_KeyDown"
        mc:Ignorable="d"
        Title="PureGIS Geo-QC" Height="600" Width="1000"
        Icon="img/Geo_QC.ico"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        Background="#FF2D2D30">
    <Window.Resources>
        
        <local:BoolToCheckMarkConverter x:Key="BoolToCheckMarkConverter"/>

        <!-- 타이틀바 버튼 스타일 -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#FFF1F1F1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="0,1,1,1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,0,5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF4A6982"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 메뉴 스타일 -->
        <Style TargetType="{x:Type Menu}">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FFF1F1F1"/>
        </Style>

        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFF1F1F1"/>
            <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border x:Name="templateRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <Grid Margin="-1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="Col0" MinWidth="22" Width="Auto" SharedSizeGroup="MenuItemIconColumnGroup"/>
                                    <ColumnDefinition x:Name="Col1" Width="13"/>
                                    <ColumnDefinition x:Name="Col2" Width="*"/>
                                    <ColumnDefinition x:Name="Col3" Width="30"/>
                                    <ColumnDefinition x:Name="Col4" Width="Auto" SharedSizeGroup="MenuItemIGTColumnGroup"/>
                                    <ColumnDefinition x:Name="Col5" Width="20"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="Icon" ContentSource="Icon" HorizontalAlignment="Center" Height="16" Margin="3" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" Width="16"/>
                                <ContentPresenter x:Name="HeaderHost" Grid.Column="2" ContentSource="Header" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                <TextBlock x:Name="InputGestureText" Grid.Column="4" Margin="{TemplateBinding Padding}" Opacity="0.7" Text="{TemplateBinding InputGestureText}"/>
                                <Path x:Name="RightArrow" Grid.Column="5" Data="M0,0L4,3.5 0,7z" Fill="{TemplateBinding Foreground}" Margin="4,0,0,0" VerticalAlignment="Center" Visibility="Collapsed"/>
                                <Popup x:Name="PART_Popup" AllowsTransparency="True" Focusable="False" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}">
                                    <Border x:Name="SubmenuBorder" BorderBrush="#FF555555" BorderThickness="1" Background="#FF2D2D30" Padding="2">
                                        <ScrollViewer x:Name="SubmenuScrollViewer" Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
                                            <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Cycle" Grid.IsSharedSizeScope="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" KeyboardNavigation.TabNavigation="Cycle"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" TargetName="templateRoot" Value="#FF555555"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF888888"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="TopLevelHeader"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter TargetName="PART_Popup" Property="Placement" Value="Bottom"/>
                                <Setter TargetName="Col0" Property="MinWidth" Value="0"/>
                                <Setter TargetName="Col1" Property="Width" Value="0"/>
                                <Setter TargetName="Col3" Property="Width" Value="0"/>
                                <Setter TargetName="Col4" Property="Width" Value="0"/>
                                <Setter TargetName="Col5" Property="Width" Value="0"/>
                                <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="TopLevelItem"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter TargetName="Col0" Property="MinWidth" Value="0"/>
                                <Setter TargetName="Col1" Property="Width" Value="0"/>
                                <Setter TargetName="Col3" Property="Width" Value="0"/>
                                <Setter TargetName="Col4" Property="Width" Value="0"/>
                                <Setter TargetName="Col5" Property="Width" Value="0"/>
                                <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="SubmenuHeader"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter TargetName="RightArrow" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PART_Popup" Property="Placement" Value="Right"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Role" Value="SubmenuItem"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Padding" Value="10,5"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Separator}">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Height" Value="1"/>
        </Style>

    </Window.Resources>

    <Border BorderBrush="#FF555555" BorderThickness="1">
        <DockPanel>
            <!-- 커스텀 타이틀바 -->
            <Grid DockPanel.Dock="Top" Background="#FF3F3F46" MouseDown="TitleBar_MouseDown" Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 아이콘 및 제목 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Image Source="img/Geo_QC.ico" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="PureGIS Geo-QC" FontWeight="SemiBold" FontSize="13" Foreground="#FFCCCCCC"/>
                </StackPanel>

                <!-- 타이틀바 버튼들 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="＿" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click"/>
                    <Button Content="☐" Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click"/>
                    <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- 메뉴바 -->
            <Menu DockPanel.Dock="Top" Background="#FF3F3F46" Foreground="#FFF1F1F1">
                <MenuItem Header="_파일(F)">
                    <MenuItem Header="_새 프로젝트(N)" InputGestureText="Ctrl+N" Click="NewProjectMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="📄" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_프로젝트 불러오기(O)..." InputGestureText="Ctrl+O" Click="OpenProjectMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="📁" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_프로젝트 저장(S)" InputGestureText="Ctrl+S" Click="SaveProjectMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="💾" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="_종료(X)" InputGestureText="Alt+F4" Click="ExitMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="🚪" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="_정보(I)">
                    <MenuItem Header="_프로그램 정보..." Click="AboutMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="ℹ️" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

            <!-- 메인 컨텐츠 -->
            <TabControl Name="MainTabControl" Background="#FF2D2D30">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="#FF3E3E42"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gray" CornerRadius="4,4,0,0" Margin="2,0">
                                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF2D2D30" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#FF555555" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="1. 기준 정의">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#FF3E3E42" CornerRadius="5" Margin="10">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="등록된 테이블" Foreground="White" FontSize="16" Margin="10" FontWeight="Bold"/>

                                <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="10,0,10,10">
                                    <Button Content="새 테이블 만들기" Padding="8,5" Name="NewTableButton" Click="NewTableButton_Click" Margin="0,0,0,5"/>
                                    <Button Content="선택 테이블 삭제" Padding="8,5" Name="DeleteTableButton" Click="DeleteTableButton_Click" 
                                            Background="#FF8B4513" Foreground="White"/>
                                </StackPanel>

                                <!-- 기존 ListBox 대신 TreeView 사용 -->                                
                                <TreeView Name="ProjectTreeView" Background="Transparent" Foreground="White" BorderThickness="0" 
                                        Margin="10,0,10,10" SelectedItemChanged="ProjectTreeView_SelectedItemChanged"
                                        AllowDrop="True"
                                        PreviewMouseLeftButtonDown="TreeView_PreviewMouseLeftButtonDown"
                                        MouseMove="TreeView_MouseMove"
                                        Drop="TreeView_Drop">
                                        <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Tables}">
                                            <TextBlock Text="{Binding CategoryName}" FontWeight="Bold"/>
                                            <HierarchicalDataTemplate.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding TableName}"/>
                                                </DataTemplate>
                                            </HierarchicalDataTemplate.ItemTemplate>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </DockPanel>
                        </Border>

                        <GridSplitter Grid.Column="1" Width="5" Background="#FF555555" HorizontalAlignment="Stretch"/>

                        <Border Grid.Column="2" Background="#FF3E3E42" CornerRadius="5" Margin="10">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#FF4A4A4A" CornerRadius="3" Margin="10,10,10,5" Padding="10" Name="TableInfoPanel" Visibility="Collapsed">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>                                            
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="프로젝트명:" Foreground="LightGray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="1" Name="ProjectNameTextBox" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray" VerticalContentAlignment="Center"/>
                                        <Button Grid.Column="2" Content="이름 저장" Padding="8,3" Name="SaveProjectNameButton" Click="SaveProjectNameButton_Click" Margin="10,0,0,0"/>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="테이블 ID:" Foreground="LightGray" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="0" Grid.Column="1" Name="TableIdTextBox" Margin="0,0,15,0" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="테이블명:" Foreground="LightGray" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBox Grid.Row="0" Grid.Column="3" Name="TableNameTextBox" Margin="0,0,10,0" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray"/>
                                        <Button Grid.Row="0" Grid.Column="4" Content="저장" Padding="8,3" Name="SaveTableInfoButton" Click="SaveTableInfoButton_Click"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Name="SelectedTableHeader" Text="테이블을 선택하세요" 
                                                   Foreground="White" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border DockPanel.Dock="Top" Background="#FF2F4F4F" CornerRadius="3" Margin="10,5,10,5" Padding="8">
                                    <TextBlock Text="💡 Ctrl+V로 컬럼 데이터를 붙여넣으세요 (컬럼ID, 컬럼명, 타입, 길이 순서)" 
                                               Foreground="LightBlue" FontSize="12" TextWrapping="Wrap"/>
                                </Border>

                                <DataGrid Name="StandardGrid" AutoGenerateColumns="False" 
                                          CanUserAddRows="False" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray" RowHeight="28"
                                          IsReadOnly="False"
                                          SelectionUnit="Cell"
                                          SelectionMode="Extended">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="컬럼 ID" Binding="{Binding ColumnId}" Width="*"/>
                                        <DataGridTextColumn Header="컬럼명" Binding="{Binding ColumnName}" Width="2*"/>
                                        <DataGridTextColumn Header="타입" Binding="{Binding Type}" Width="*"/>
                                        <DataGridTextColumn Header="길이" Binding="{Binding Length}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="2. 파일 검사">
                    <Grid>
                        <Border Background="#FF3E3E42" CornerRadius="5" Margin="10">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="파일 불러오기 및 검사 실행" Foreground="White" FontSize="16" Margin="10" FontWeight="Bold"/>
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                    <Button Content="SHP/DBF 파일 열기" Margin="10,0,10,10" Padding="5" Name="OpenFileButton" Click="OpenFileButton_Click"/>
                                    <TextBlock Name="FileNameText" Text="파일을 선택하세요." Foreground="Gray" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button DockPanel.Dock="Bottom" Content="검사 실행" Margin="10" Padding="10" Name="ValidateButton" Click="ValidateButton_Click" FontSize="16" FontWeight="Bold"/>
                                <DataGrid Name="LoadedFileGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Background="#FF2D2D30" Foreground="White" BorderBrush="Gray">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="컬럼명" Binding="{Binding ColumnName}" Width="2*"/>
                                        <DataGridTextColumn Header="타입" Binding="{Binding DataType.Name}" Width="*"/>
                                        <DataGridTextColumn Header="길이" Binding="{Binding MaxLength}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="3. 결과 리포트">
                    <Grid>
                        <Border Background="#FF3E3E42" CornerRadius="5" Margin="10">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="파일 검사 결과" Foreground="White" FontSize="16" Margin="10" FontWeight="Bold"/>

                                <!-- 내보내기 버튼 패널 -->
                                <Border DockPanel.Dock="Top" Background="#FF4A4A4A" CornerRadius="3" Margin="10,0,10,10" Padding="15">
                                    <StackPanel Orientation="Vertical">
                                        <!-- PDF 내보내기 섹션 -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                            <TextBlock Text="PDF 내보내기:" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <Button Name="ExportQuestPdfButton" Content="📄 QuestPDF로 내보내기" 
                                    Padding="12,6" Margin="0,0,10,0" 
                                    Background="#FFE74C3C" Foreground="White" 
                                    FontWeight="Bold" Click="ExportQuestPdfButton_Click"
                                    ToolTip="QuestPDF 라이브러리 사용 (권장)"/>
                                            <Button Name="ExportPdfSharpButton" Content="📄 PdfSharp로 내보내기" 
                                    Padding="12,6" 
                                    Background="#FFDC143C" Foreground="White" 
                                    FontWeight="Bold" Click="ExportPdfSharpButton_Click"
                                    ToolTip="PdfSharp 라이브러리 사용 (가벼움)"/>
                                        </StackPanel>

                                        <!-- Word 내보내기 섹션 -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Word 내보내기:" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <Button Name="ExportToWordButton" Content="📝 Word로 내보내기" 
                                    Padding="15,8" 
                                    Background="#FF3498DB" Foreground="White" 
                                    FontWeight="Bold" Click="ExportToWordButton_Click"
                                    ToolTip="Microsoft Word 문서로 내보내기"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <DataGrid Name="ResultGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" 
                          Background="#FF2D2D30" Foreground="White" BorderBrush="Gray">
                                    <DataGrid.Columns>
                                        <!-- 상태 -->
                                        <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="정상">
                                                            <Setter Property="Foreground" Value="LightGreen"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </Trigger>
                                                        <Trigger Property="Text" Value="오류">
                                                            <Setter Property="Foreground" Value="LightCoral"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- 기준 정보 -->
                                        <DataGridTextColumn Header="기준 컬럼ID" Binding="{Binding Std_ColumnId}" Width="100"/>
                                        <DataGridTextColumn Header="기준 컬럼명" Binding="{Binding Std_ColumnName}" Width="120"/>
                                        <DataGridTextColumn Header="기준 타입" Binding="{Binding Std_Type}" Width="80"/>
                                        <DataGridTextColumn Header="기준 길이" Binding="{Binding Std_Length}" Width="80"/>

                                        <!-- 파일 정보 -->
                                        <DataGridTextColumn Header="찾은 필드명" Binding="{Binding Found_FieldName}" Width="100"/>
                                        <DataGridTextColumn Header="파일 타입" Binding="{Binding Cur_Type}" Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsTypeCorrect}" Value="False">
                                                            <Setter Property="Background" Value="#FFFF6B6B"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsTypeCorrect}" Value="True">
                                                            <Setter Property="Background" Value="#FF4ECDC4"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="파일 길이" Binding="{Binding Cur_Length}" Width="80">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLengthCorrect}" Value="False">
                                                            <Setter Property="Background" Value="#FFFF6B6B"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLengthCorrect}" Value="True">
                                                            <Setter Property="Background" Value="#FF4ECDC4"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- 결과 -->
                                        <DataGridTextColumn Header="필드존재" Binding="{Binding IsFieldFound, Converter={StaticResource BoolToCheckMarkConverter}}" Width="70">
                                            <DataGridTextColumn.ElementStyle>
